<Window x:Class="FlickFolio.Dialogs.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlickFolio.Dialogs" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        mc:Ignorable="d" WindowStyle="None" Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="InfoWindow" Height="394" Width="256">
    <Grid Margin="0,0,0,2" Background="Transparent">

        <TextBlock FontSize="13" FontFamily="../Fonts/Poppins/#Poppins" Name="txtOutput" HorizontalAlignment="Left" Margin="17,49,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top"/>
        <Label FontSize="16" FontFamily="../Fonts/Poppins/#Poppins" Name="lblTitle" Content="Detalji" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Button Name="btnClose" FontFamily="../Fonts/Poppins/#Poppins"  Content="Zatvori prozor ✖" HorizontalAlignment="Center" Margin="0,353,0,0" VerticalAlignment="Top" Height="29" Width="114" Click="btnClose_Click" IsCancel="True" BorderBrush="{x:Null}" Background="#FF87AEC7"/>
        <Border Name="brdInfo" BorderBrush="Black" BorderThickness="0" Background="White" Panel.ZIndex="-1" CornerRadius="30"/>

    </Grid>
</Window>
