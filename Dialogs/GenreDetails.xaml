<Window x:Class="FlickFolio.Dialogs.GenreDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlickFolio.Dialogs"
        mc:Ignorable="d"
        Title="Detalji žanra" Height="196" Width="311" Loaded="Window_Loaded">
    <Grid>
        <Label Content="ID" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.273,-0.2"/>
        <TextBox Name="txtId" HorizontalAlignment="Left" Margin="110,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True" />
        <Label Content="Naziv" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.273,-0.2"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="110,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" />
        <Button x:Name="btnSave" Content="Spremi" IsDefault="True" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Height="29" Width="79" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Odustani" HorizontalAlignment="Left" Margin="151,82,0,0" VerticalAlignment="Top" Height="29" Width="79" Click="btnCancel_Click" IsCancel="True"/>

    </Grid>
</Window>
